<?xml version="1.0"?>
<block>
  <name>Fixed Length Stream Synchronizer Tagger</name>
  <key>cc_sdr_fixedlen_packet_synchronizer</key>
  <category>cc_sdr</category>
  <import>import cc_sdr</import>
  <import>import numpy</import>
  <make>cc_sdr.fixedlen_packet_synchronizer($synctag, $plentag, $plen, $stream_type.t)</make>
  <param>
    <name>Stream Type</name>
    <key>stream_type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>complex</key>
      <opt>t:numpy.complex</opt>
    </option>
    <option>
      <name>Float</name>
      <key>float</key>
      <opt>t:numpy.float</opt>
    </option>
    <option>
      <name>Int</name>
      <key>int</key>
      <opt>t:numpy.int</opt>
    </option>
    <option>
      <name>Short</name>
      <key>short</key>
      <opt>t:numpy.short</opt>
    </option>
    <option>
      <name>Byte</name>
      <key>byte</key>
      <opt>t:numpy.byte</opt>
    </option>
  </param>
  <param>
    <name>Syncword tag</name>
    <key>synctag</key>
    <value>syncword</value>
    <type>string</type>
  </param>
  <param>
    <name>Packet length tag</name>
    <key>plentag</key>
    <value>packet_len</value>
    <type>string</type>
  </param>
  <param>
    <name>Packet length</name>
    <key>plen</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>$stream_type</type>
  </sink>

  <source>
    <name>out</name>
    <type>$stream_type</type>
  </source>
</block>
